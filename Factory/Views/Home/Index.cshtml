@{
  Layout = "_Layout";
}

@using Factory.Models;


  
<div class="form">
  <div class="row" style="text-align: center; padding-top: 20px;">
  <div class="col-6">
  <div class="engineers">
    <h5>@Html.ActionLink("Engineers!", "Index", "Engineers") | @Html.ActionLink("Add a new engineer!", "Create", "Engineers")</h5>
  </div>

  @if (@Model.Count == 0)
    {
      <h6>No engineers have been added yet!</h6>
    } 

      <ul>
      @foreach(Engineer engineer in ViewBag.Engineer)
      {
        <p>@Html.ActionLink($"{engineer.Name}", "Details", "Engineers", new { id = engineer.EngineerId })</p>
      }
    </ul>  
</div>

<div class="col-6">
    <div class="machines">
    <h5>@Html.ActionLink("Machines!", "Index", "Machines") | @Html.ActionLink("Add a new Machine!", "Create", "Machines")</h5>

    @if (@Model.Count == 0)
    {
      <h6>No machines have been added yet!</h6>
    } 

    <ul>
      @foreach(Machine machine in ViewBag.Machine)
      {
        <p>@Html.ActionLink($"{machine.Name}", "Details", "Machines", new { id = machine.MachineId })</p>
      }
    </ul>  
    </div>
  </div>
  </div>

</div>
